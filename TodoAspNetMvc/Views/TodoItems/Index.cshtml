@model IEnumerable<TodoAspNetMvc.Models.TodoItem>
@{
    ViewBag.Title = "Todo Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Todo List</h3>

@Html.ActionLink("Add New", "New", "TodoItems", new { @class = "btn btn-primary" })

@if (!Model.Any())
{
    <p>Not any task yet!</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Todo Item</th>
                <th>Creation Time</th>
                <th>Deadline</th>
                <th>Complete</th>
                <th>Actions</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>@item.ShortDescription</td>
                    <td>@item.CreationDate</td>
                    <td>@item.Deadline</td>
                    <td>@item.IsComplete</td>
                    <td>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal-@item.Id">
                            Details
                        </button>

                        <!-- Modal -->
                        <div class="modal" , id="myModal-@item.Id">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4 class="modal-title">Todo Item Details</h4>
                                    </div>
                                    <div class="modal-body">
                                        <p>@item.Id</p>
                                        <p>@item.ShortDescription</p>
                                        <p>@item.Description</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        @*<button type="button" class="btn btn-primary">Save changes</button>*@
                                    </div>
                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
            </tbody>
        }
    </table>
}

